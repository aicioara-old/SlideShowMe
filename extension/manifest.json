{
	"manifest_version": 2,

	"name": "SlideShowMe",
	"description": "A chrome extension which let computers synchronize over links. Be social in your browser.",
	"version": "1.0",

	"permissions": [
		"tabs", "activeTab", "http://*/*", "https://*/*"
	],

	"background": {
		"scripts": ["background.js"],
		"persistent" : false
	},

	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_popup": "popup.html"
	},

	"web_accessible_resources": [
		"icons/*.png"
	],

	"icons": { "16": "icons/icon.png", "48": "icons/icon.png", "128": "icons/icon.png" }


}